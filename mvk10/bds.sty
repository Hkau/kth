% Kommando som behövs för \maketitle
\newcommand{\HRule}{\rule{\linewidth}{0.5mm}}

% Version
\newcommand{\version}[1]{
	\renewcommand{\version}{#1}
}

% Custom titlepage, wohooo
\renewcommand{\maketitle}{
	\begin{titlepage}
		\begin{center}
			\vspace*{\fill}
		  	\includegraphics[width=100mm]{bds/BSLOGO.pdf}\\
			\vspace{10mm}
			\HRule \\
			\vspace{3mm}
			\huge{
				\sffamily\textbf{\project}\\
				\title
			}\\
			\HRule \\
			\vspace{10mm}
			\author\\
			\vspace*{\fill}
			\version\\
			\today
			\vspace*{\fill}
		\end{center}
	\end{titlepage}
	\newpage
}

% Environment for the Document Change Record
\newenvironment{changerecord}{
	\titlepage
	\begin{center}
	\textbf{Document Change Record}
	\newline
	\vspace*{10mm}
}{
	\end{center}
	\newpage
}

